@import './../../themes/constants.styl'
@import './../../themes/animations.styl'

.projects
	position relative
	text-align center
	overflow-x hidden
	background fgColor
	padding 0 (padding*3) (padding*15)
	height auto
	width 100%
	@media only screen and (max-width: 600px)
		padding (padding*10) (padding)
	.title
		padding (padding*10) (padding*2) (padding*2)
		margin 0 0 (padding*7)
		@media only screen and (max-width: 600px)  
			padding  0 (padding*2) (padding*2)
		.dev
			line-height 50px
			vertical-align bottom
			@media only screen and (max-width: 600px)
				line-height 20px
				vertical-align middle
	.dev
		font-size 16px
		font-weight 400
		color lighten(bgColor, 15)
		display inline-block
		vertical-align middle
	.project
		padding (padding*2)
		@media only screen and (max-width: 600px)
			padding (padding*2) 0
		p
			color alpha(bgColor, 0.5)
	.block
		padding (padding)
		.image
			border-radius 3px
			border 1px solid darken(fgColor, 15)
			height 185px
			margin-bottom (padding*3)
			background-repeat no-repeat
			background-position top
			background-size contain
			@media only screen and (max-width: 600px)
				background-size cover
			.textContainer
				background rgba(0,0,0,0.5)
				height 185px
				border-radius 3px
				transition()
				h3
					font-size 30px
					color rgba(255,255,255, 0.8)
					height 185px
					line-height 185px
					transition()
				&:hover
					opacity 0
					animation(fadeOut cubic-bezier(0.4, 0, 0.2, 1) 0.66s)
					h3
						transform translate3d(0, -30px, 0)
						animation(fadeOutUp cubic-bezier(0.4, 0, 0.2, 1) 0.66s)

