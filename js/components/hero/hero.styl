@import './../../themes/constants.styl'
@import './../../themes/animations.styl'

.hero
	position relative
	display flex
	flex-wrap wrap
	text-align center
	background skyBlue
	padding (padding*4) padding
	width 100%
	@media only screen and (max-width: 600px)
		display table
	// .circle
