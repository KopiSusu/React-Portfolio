@import './../../themes/constants.styl'

// General
body, html
	height 100%
	background bgColor
	font-family fontFamily
	color fontColor
	overflow hidden
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	text-shadow rgba(0, 0, 0, .01) 0 0 1px
	*
		box-sizing border-box
		vertical-align top
ul
	margin 0
	padding 0
li
	list-style none
h1,h2,h3,h4,p
	margin 0
	font-family secondaryFontFamily
	letter-spacing 0.75px
h1
	font-size 20px
h2
	font-size 18px
h3
	font-size 16px
h4
	font-family fontFamily
	font-size 14px
p
	font-family fontFamily
	font-size 12px